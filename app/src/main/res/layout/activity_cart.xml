<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cart"
    android:background="@drawable/background"
    android:orientation="vertical">
    //bar
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#031824"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24">
        </Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp">
        </TextView>
    </LinearLayout>
    // SP1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bgrsection">
     <ImageView
         android:layout_width="30dp"
         android:layout_height="30dp"
         android:src="@drawable/ic_baseline_radio_button_unchecked_24"
         android:layout_gravity="center"
         android:layout_marginLeft="10dp">
     </ImageView>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_24">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giày Sneaker"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#031428">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail"></TextView>>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_minus_24"
                android:layout_gravity="center">
            </ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_gravity="center">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
    //SP2
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bgrsection"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_check_circle_outline_24"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
        </ImageView>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_24">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giày Sneaker 1"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#031428">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail"></TextView>>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_minus_24"
                android:layout_gravity="center">
            </ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_gravity="center">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
    //SP3
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bgrsection"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_radio_button_unchecked_24"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp">
        </ImageView>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_image_24">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giày Sneaker 2"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#031428">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail"></TextView>>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center">
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_minus_24"
                android:layout_gravity="center">
            </ImageButton>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center">
            </TextView>
            <ImageButton
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/ic_baseline_add_24"
                android:layout_gravity="center">
            </ImageButton>
        </LinearLayout>
    </LinearLayout>
    //payment detail
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Payment detail"
        android:textSize="20sp"
        android:textColor="#031824"
        android:textStyle="bold"
        android:paddingLeft="10dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgrsection"
        android:layout_margin="5dp"
        android:padding="10dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/payment_detail"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_detail1"
            android:textSize="20sp"
            android:textColor="#151515">
        </TextView>
    </LinearLayout>
    <Button
        android:id="@+id/btn_checkout"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Check out"
        android:backgroundTint="#031824">
    </Button>



</LinearLayout>