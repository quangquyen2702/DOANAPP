<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".checkout"
    android:orientation="vertical"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#031824"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24">
        </Button>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check out"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:text="Delivery address"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="#031824"
            android:textStyle="bold">
        </TextView>
        <TextView
            android:id="@+id/btn_editAdd"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#ffffff"
            android:textColor="#142AA1"
            android:layout_marginRight="5dp"
            android:text="Edit"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XXX, University of Econimic and Law, Thu Duc city"
        android:textSize="15sp"
        android:textColor="#575757"
        android:padding="10dp">
    </TextView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/sector_line"
        android:layout_margin="5dp">
    </ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Summary"
        android:textSize="20sp"
        android:textColor="#031824"
        android:textStyle="bold"
        android:padding="10dp">
    </TextView>
    <ListView
        android:id="@+id/lvproduct_checkout"
        android:layout_width="match_parent"
        android:layout_height="300dp">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment method"
            android:textSize="20sp"
            android:textColor="#031824"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:layout_weight="9">
        </TextView>

        <Button
            android:id="@+id/btn_paymentmethod"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#ffffff"
            android:drawableEnd="@drawable/ic_baseline_navigate_next_24"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_cash"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#031824"
            android:text="Cash">
        </Button>
        <Button
            android:id="@+id/btn_momo"
            android:layout_width="180dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:backgroundTint="#031824"
            android:text="Momo">
        </Button>
    </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/sector_line">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Standard delivery"
                    android:paddingLeft="10dp"
                    android:textSize="20sp"
                    android:textColor="#031824"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPriceDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_medium"
                    android:text="$111"
                    android:textColor="@color/darkblue"
                    android:textSize="15dp"
                   android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/imvDelivery"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:paddingHorizontal="-15dp"
                    android:src="@drawable/delivery_icon"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Est. Arrival: 31 Nov - 5 Dec"
                    android:textColor="@color/darkblue"
                    android:fontFamily="@font/nunito_medium"
                    android:textSize="15dp"
                    android:layout_marginStart="5dp"
                    />
                <TextView
                    android:id="@+id/txtEditDelivery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="EDIT"
                    android:textColor="@color/darkblue"
                    android:textSize="18dp"
                    android:gravity="right"
                    android:fontFamily="@font/nunito_medium"
                    />
            </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/sector_line">
    </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bgredittext"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:elevation="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enter voucher code"
                    android:textSize="17sp"
                    android:fontFamily="@font/nunito_medium"
                    android:textColor="@color/darkblue"
                    />
                <TextView
                    android:id="@+id/txtRedeem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_medium"
                    android:text="Redeem"
                    android:textSize="18sp"
                    android:gravity="right"/>

            </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Payment detail"
        android:textSize="20sp"
        android:textColor="#031824"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgrsection"
        android:layout_margin="5dp"
        android:padding="10dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/payment_detail"
            android:textSize="20sp">
        </TextView>
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/payment_detail1"
            android:textSize="20sp"
            android:textColor="#151515">
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Confirm"
        android:backgroundTint="#031824"
        android:layout_marginTop="20dp"
        >
    </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>