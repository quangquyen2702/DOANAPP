<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".forgot_pwd">
    <ImageView
        android:layout_width="331dp"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/black"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/txt_BackTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="10dp"
        android:text="@string/back_login_or_signup"
        android:backgroundTint="#FFFFFF"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Reset Password"
        android:textSize="32dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center">

    </TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:backgroundTint="@color/black"
        android:background="?android:attr/listDivider" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the email address that is associed with your account."
        android:textSize="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>
    <EditText
        android:id="@+id/edt_emailorphone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/duongvien_goctron"
        android:hint="@string/email_or_phone"
        android:inputType="text"
        android:textColor="#757575"
        android:textSize="17sp">

    </EditText>
    <Button
        android:id="@+id/btn_resetPwd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:text="Reset Password"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:textSize="15sp">

    </Button>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/black"
        android:background="?android:attr/listDivider" />



</LinearLayout>