<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/bgrsection"
        android:outlineSpotShadowColor="@color/black"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_logovoucher"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/logonike_voucher"
            android:layout_gravity="center"
            android:layout_margin="10dp">
        </ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_titlevoucher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nike"
                android:textSize="25sp"
                android:textColor="#031824"
                android:textStyle="bold"
                android:padding="5dp">
            </TextView>

            <TextView
                android:id="@+id/txt_validvoucher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Valid till 25.10.2022"
                android:textColor="#090909"
                android:textSize="15sp"></TextView>
            <Button
                android:id="@+id/btn_usevoucher"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:backgroundTint="#031824"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Use">
            </Button>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>